    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    <arg name="robot_name"    value="$(arg robot1)"/>
  </include>
  <include file="$(find multibots_simulations)/launch/move_base_robot.launch">
    <arg name="model" value="$(arg model)" />
