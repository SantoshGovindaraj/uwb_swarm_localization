<launch>
  <!--- Run AMCL -->
  <include file="$(find amcl)/examples/amcl_diff.launch" />

  <!-- Define your move_base node -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find multibots_simulations)/params/costmap_common_params_waffle.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find multibots_simulations)/params/costmap_common_params_waffle.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find multibots_simulations)/params/local_costmap_params.yaml"  command="load" />
    <rosparam file="$(find multibots_simulations)/params/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find multibots_simulations)/params/base_local_planner_params.yaml" command="load" />

    <remap from="map" to="/map" />
  </node>
</launch>
